#include<iostream>
#include<iomanip> 
#include<cstring>
#include<cmath>
#include<stack>
#include<queue>
#include <list>
#include<assert.h>
#define pi 3.14
using namespace std;
class yuan
{
private:
	double r;
	double a;
	double b;
public:
	void input();
	void output();
	double zhouchang();
	double area();

};
double yuan::zhouchang()
{
	a = 2 * pi * r;
	return a;
}
double yuan::area()
{
	b = pi * r * r;
	return b;
}
void yuan::input()
{
	cin >> r;
}
void yuan::output()
{
	cout << zhouchang() << endl;
	cout <<  area() << endl;
}
int main(void)
{
	yuan circle;
	circle.input();
	circle.output();
	return 0;
}
